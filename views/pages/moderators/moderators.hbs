<h1>Moderators</h1>

<hr>

<br>
<ul>
    {{#each moderators}}
    <li class="mb-3">

        {{ name }} {{ lastname }} ({{ email }})

        {{#if ./../isAdmin}}
        <small>- <a href="/moderators/{{ id }}/edit">[Editar]</a></small>  
        <form action="/moderators/{{ id }}/delete" method="POST">
            <button type="submit" class="btn btn-danger btn-sm ml-2">Delete moderator</button>
        </form>
        {{/if}}

    </li>
    {{/each}}
</ul>
<br>

{{#if isAdmin}}
    <a href="/moderators/create" class="btn btn-dark">Create New Moderator</a>
    <br>
    <br>
    <br>          
    <form class="form-inline my-2 my-lg-0">   
    <input value="" id="searchUserRoleUSER" class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
    </form>
    <br>
    <ul id="result"></ul>
    <br>
    <br>
    <br>
    <br>
{{/if}}

