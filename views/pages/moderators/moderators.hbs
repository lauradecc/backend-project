<h1>Moderators</h1>

<hr>
<br>

<ul>
  {{#each moderators}}
  <li class="mb-3">

    {{ name }} {{ lastname }} ({{ email }})

    {{#if ./../isAdmin}}

    <div class="d-flex mt-2">

      <a class="btn btn-primary btn-sm" href="/moderators/{{ id }}/edit">[Editar]</a>
      
      <form action="/moderators/{{ id }}/delete" method="POST">
        <button type="submit" class="btn btn-danger btn-sm ml-2">Delete moderator</button>
      </form>

    </div>

    {{/if}}

  </li>
  {{/each}}
</ul>

<br>

{{#if isAdmin}}

<hr>

<h6 class="text-center"><b>Find users and make them moderators</b></h6>

<form class="form-inline my-2 my-lg-0">
  <input value="" id="searchUserRoleUSER" class="form-control mr-sm-2" type="search" placeholder="Search"
    aria-label="Search">
</form>

<br>

<ul id="result"></ul>

{{/if}}

<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
<script src="js/app.js"></script>