<h1>Vista que edita los momentos</h1>

<div class="row justify-content-center">

        <div class="col-md-4">

            <h1>Edit your moments</h1>
            <br>
            <hr>
            <br>

            {{moment.phrase}}
           


            <form action="/{{moment.id}}/edit" method="POST">

                <div class="form-group">
                    <label for="date">Date</label>
                    {{dateISO}}
                    <input  type="date" class="form-control" id="date" name="date" value="{{dateISO}}">
                </div>

                <div class="form-group">
                    <label for="place">Moment</label>
                    <textarea name="phrase" class="form-control" id="place" aria-label="With textarea">{{moment.phrase}}</textarea>
                    </div>

                <div class="form-group">
                    <label for="latitud">Latitud</label>
                    <input type="text" class="form-control" id="latitud" name="lat">
                </div>

                 <div class="form-group">
                    <label for="longitud">Longitud</label>
                    <input type="text" class="form-control" id="longitud" name="lng">
                </div>

                <button type="submit" class="btn btn-dark btn-block">Edit your moment</button>
            </form>

            {{#if errorMsg}}
            <p id="errorMessage">{{errorMsg}}</p>
            {{/if}}

            <hr>
           

        </div>
    </div>