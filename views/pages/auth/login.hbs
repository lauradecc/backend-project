 <div class="row justify-content-center">

        <div class="col-md-4">

            <h1>Log In</h1>
            <hr>
            <br>

            <form action="/login" method="POST">

                {{> emailInput }}

                {{> passwordInput }}

                <button type="submit" class="btn btn-dark btn-block">Log In</button>

            </form>

            {{> ifErrorMessage }}

            <br>

            <p class="text-center">Not Registered Yet? <a href="/signup">Sign Up For Free</a></p>
            
        </div>
    </div>