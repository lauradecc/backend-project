<h1>My Profile</h1>

<hr>

<p>Name and last name: {{ user.name }} {{ user.lastname }}</p>

<p>Email: {{ user.email }}</p>

<div class="d-flex justify-content-center">

  <a href="/my-profile/edit" class="btn btn-sm btn-primary">Edit My Profile</a>

  <form action="/my-profile/delete" method="POST">
    <button type="submit" class="btn btn-danger btn-sm ml-2">Delete My Profile</button>
  </form>

</div>

<hr>

<h2 class="mt-5">My Advice</h2>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Advice</th>
      <th>Status</th>
    </tr>
  </thead>
  <tbody>
    {{#each advice}}
    <tr>
      <td>{{ phrase }}</td>
      {{#if hasBeenAccepted}}
      <td>Published</td>
      {{else if hasBeenRejected}}
      <td>Rejected</td>
      {{else}}
      <td>Pending</td>
      {{/if}}
    </tr>
    {{/each}}
  </tbody>
</table>

{{#if thereAreRejected}}
<form action="/community-advice/delete" method="POST">
  <button type="submit" class="btn btn-danger btn-sm ml-2">Delete Rejected Advice</button>
</form>
{{/if}}