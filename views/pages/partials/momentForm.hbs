<div class="form-group">
  <label for="date">Date</label>
  <input type="date" class="form-control" id="date" name="date" value="{{ dateISO }}">
</div>

<div class="form-group">
  <label for="place">Moment</label>
  <textarea name="phrase" class="form-control" id="place" aria-label="With textarea">{{ moment.phrase }}</textarea>
</div>

<div class="form-group">
  <label for="name">Place Name</label>
  <input type="text" class="form-control" id="name" name="name" value="{{ moment.place.name }}">
</div>

<div class="form-group">
  <label for="latitud">Latitude</label>
  <input type="text" class="form-control" id="latitud" name="lat" value="{{ moment.place.location.coordinates.[0] }}">
</div>

<div class="form-group">
  <label for="longitud">Longitude</label>
  <input type="text" class="form-control" id="longitud" name="lng" value="{{ moment.place.location.coordinates.[1] }}">
</div>