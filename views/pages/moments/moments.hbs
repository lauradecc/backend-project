<h1>My Happy Moments</h1>

{{#each moments}}

  <div class="row row-cols-3">
    <div class="card d-flex justify-content-space-around" style="width: 18rem;">
      <div class="card-body">
        <h5 class="card-title">{{ date }}</h5>
        <h6 class="card-subtitle mb-2 text-muted">{{ place.name }}</h6>
        <p class="card-text">{{ phrase }}</p>
        <a href="/moments/{{ id }}/edit" class="card-link">Edit your moment</a>
        <form action="/moments/{{ id }}/delete" method="POST">
          <button type="submit" class="btn btn-danger card-link">Delete moment</button>
        </form>
      </div>
    </div>
  </div>

{{/each}}

