<div class="row justify-content-center">

  <div class="col-md-4">

    <h1>Sign Up</h1>
    <hr>
    <br>

    <form action="/signup" method="POST">

      {{> nameLastnameInputs }}

      {{> emailInput }}

      {{> passwordInput }}

      <button type="submit" class="btn btn-dark btn-block">Sign Up</button>

    </form>

    {{> ifErrorMessage }}

    <br>

    <p class="text-center">Already Have An Account? <a href="/login">Log In</a></p>

  </div>
</div>